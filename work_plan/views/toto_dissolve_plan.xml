<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="toto_dissolve_plan_view_form" model="ir.ui.view">
        <field name="name">toto.dissolve.plan.view.form</field>
        <field name="model">toto.dissolve.plan</field>
        <field name="arch" type="xml">
            <form>
<!--                <field name="employee_ids" invisible="1"/>-->
                <header>
                    <button name="action_finish" string="完成" states="process" type="object" class="oe_highlight" groups="work_plan.group_work_dissolve_monitor"/>
                    <button name="action_renew" string="重做" states="finished" type="object" class="oe_highlight" groups="work_plan.group_work_dissolve_monitor"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group col="4">
                        <field name="date" widget="date"/>
                        <field name="assume_user_id"/>
                        <field name="vacation"/>
                        <field name="staffing"/>
                    </group>
                    <div class="o_horizontal_separator">人员安排</div>
                    <field name="item_ids" no_lable="True">
                        <field name="device_type" invisible="1"/>
                        <tree>
                            <field name="name" string="名称" optional="show"/>
                            <field name="device_id"/>
                            <field name="operator"/>
                            <field name="product_id"/>
                            <field name="predetermined_quantity"/>
                            <field name="actual_quantity"/>
                            <field name="note"/>
                        </tree>
                        <form>
                            <field name="display_type" invisible="1"/>
                            <sheet>
                                <field name="name" attrs="{'invisible':[('display_type', '!=', 'line_section')]}"/>
                                <group col="4">
                                    <field name="device_id" domain="[('device_type', '=', 'dissolve')]"
                                           attrs="{'invisible':[('display_type', '=', 'line_section')]}" options="{'no_create':True}"/>
                                    <field name="operator"
                                           attrs="{'invisible':[('display_type', '=', 'line_section')]}" options="{'no_create':True}"/>
                                    <field name="product_id"
                                           attrs="{'invisible':[('display_type', '=', 'line_section')]}" options="{'no_create':True}"/>
                                    <field name="predetermined_quantity"
                                           attrs="{'invisible':[('display_type', '=', 'line_section')]}"/>
                                    <field name="actual_quantity"
                                           attrs="{'invisible':[('display_type', '=', 'line_section')]}"/>
                                    <field name="note"
                                           attrs="{'invisible':[('display_type', '=', 'line_section')]}"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="toto_dissolve_plan_view_tree" model="ir.ui.view">
        <field name="name">toto.dissolve.plan.view.tree</field>
        <field name="model">toto.dissolve.plan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date" widget="date"/>
                <field name="assume_user_id"/>
                <field name="staffing"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="toto_dissolve_plan_action" model="ir.actions.act_window">
        <field name="name">溶着系</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">toto.dissolve.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
        </field>
    </record>
</odoo>