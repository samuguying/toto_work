<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="toto_work_subject_view_tree" model="ir.ui.view">
        <field name="name">toto.work.subject.view.tree</field>
        <field name="model">toto.work.subject</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="toto_work_subject_view_form" model="ir.ui.view">
        <field name="name">toto.work.subject.view.form</field>
        <field name="model">toto.work.subject</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="4">
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="toto_work_subject_view_search" model="ir.ui.view">
        <field name="name">toto.work.subject.view.search</field>
        <field name="model">toto.work.subject</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="toto_work_subject_action" model="ir.actions.act_window">
        <field name="name">作业内容</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">toto.work.subject</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
        </field>
    </record>
</odoo>